<section class="py-5">
    <div class="container">
        <h1 style="margin: 2%; text-align: center;">Trip</h1>
        <div>
            <div class="form-group text-center">
                <img src="ImagePath" class="img-fluid">
            </div>
            <div class="form-group">
                <label for="startPoint">@Model.StartPoint</label>
                <input type="text" readonly class="form-control" id="startPoint" name="StartPoint" value="StartPoint">
            </div>
            <div class="form-group">
                <label for="endPoint">@Model.EndPoint</label>
                <input type="text" readonly class="form-control" id="endPoint" name="EndPoint" value="EndPoint">
            </div>
            <div class="form-group">
                <label for="departureTime">@Model.DepartureTime</label>
                <input type="datetime-local" readonly class="form-control" id="departureTime" value="DepartureTime">
            </div>
            <div class="form-group">
                <label for="seats">@Model.Seats</label>
                <input type="number" readonly class="form-control" id="seats" name="Seats" value="Seats">
            </div>
            <div class="form-group">
                <label for="description">@Model.Description</label>
                <input type="text" readonly class="form-control" id="description" name="Description" value="Description">
            </div>
            <div class="form-group text-center">
                <div class="button-holder">
                    <a href="/Trips/AddUserToTrip?tripId=Id" class="btn btn-primary btn-block text-uppercase">Join</a>
                </div>
            </div>
        </div>
    </div>
</section>